{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "typeRoots": ["typings"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~*": [".*"]
    }
  },
  "include": ["src"]
}
